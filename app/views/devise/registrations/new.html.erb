<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group col-md-6">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>
<div class="form-group col-md-6">
    <%= f.label 'First Name' %>
    <%= f.text_field :userfirstname, id: :user_userfirstname, class: 'form-control' %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label 'Last Name' %>
    <%= f.text_field :userlastname, id: :user_userlastname, class: 'form-control' %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label 'City' %>
    <%= f.text_field :usercity, id: :user_usercity, class: 'form-control' %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label 'Phone Number' %>
    <%= f.text_field :userphone, id: :user_userphone, class: 'form-control' %>
  </div>

  <div class="form-group col-md-12">
    <%= f.label :Address %>
    <%= f.text_field :useraddress, id: :user_useraddress, class: 'form-control' %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>
<% if current_user.try(:admin?) %>
<div class="form-group col-md-6">
    <%= f.label :admin %>
 <%= f.check_box :admin, id: :user_admin, class: 'form-control' %>
    </div>
<% end %>

  <div class="form-group col-md-12">
    <%= f.submit "Sign up" %>
  </div>
<% end %>